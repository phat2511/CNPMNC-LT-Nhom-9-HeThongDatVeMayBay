@page
@model AirCloud_DA.Pages.BookingModel
@{
    ViewData["Title"] = "Đặt vé";
}

<div class="row mt-3">
    <div class="col-12 col-lg-8">
        <h2>Thông tin hành khách</h2>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
        }

        <form method="post" class="row g-3">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="From" value="@Model.From" />
            <input type="hidden" name="To" value="@Model.To" />
            <input type="hidden" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="Passengers" value="@Model.Passengers" />
            <input type="hidden" name="CabinClass" value="@Model.CabinClass" />

            <div class="col-md-6">
                <label for="FullName" class="form-label">Họ và tên</label>
                <input class="form-control" id="FullName" name="FullName" value="@Model.FullName" required />
            </div>
            <div class="col-md-6">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
            </div>
            <div class="col-md-6">
                <label for="Phone" class="form-label">Số điện thoại</label>
                <input class="form-control" id="Phone" name="Phone" value="@Model.Phone" required />
            </div>

            <div class="col-12">
                <label class="form-label">Mã ưu đãi (tùy chọn)</label>
                <div class="input-group">
                    <input class="form-control" name="PromoCode" value="@Model.PromoCode" placeholder="Nhập mã ưu đãi" />
                    <button type="submit" name="action" value="apply-promo" class="btn btn-outline-primary">Áp dụng</button>
                </div>
                @if (Model.AppliedPromotion != null)
                {
                    <div class="alert alert-success mt-2">
                        <i class="bi bi-check-circle me-1"></i>
                        Đã áp dụng mã: <strong>@Model.AppliedPromotion.Code</strong>
                        @if (Model.AppliedPromotion.DiscountPercent.HasValue)
                        {
                            <span>- Giảm @Model.AppliedPromotion.DiscountPercent%</span>
                        }
                        else if (Model.AppliedPromotion.DiscountAmount.HasValue)
                        {
                            <span>- Giảm @Model.AppliedPromotion.DiscountAmount?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</span>
                        }
                    </div>
                }
            </div>

            <div class="col-12 d-grid d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success">Xác nhận đặt vé</button>
            </div>
        </form>
    </div>
    <div class="col-12 col-lg-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tóm tắt chuyến bay</h5>
                <p class="mb-1"><strong>Tuyến</strong>: @Model.From → @Model.To</p>
                <p class="mb-1"><strong>Ngày</strong>: @Model.Date.ToString("dd/MM/yyyy")</p>
                <p class="mb-1"><strong>Hành khách</strong>: @Model.Passengers</p>
                <p class="mb-1"><strong>Hạng ghế</strong>: @Model.CabinClass</p>
                @if (Model.SelectedFlight != null)
                {
                    <hr />
                    <p class="mb-1"><strong>Hãng</strong>: @Model.SelectedFlight.Airline</p>
                    <p class="mb-1"><strong>Mã chuyến</strong>: @Model.SelectedFlight.FlightNumber</p>
                    <p class="mb-1"><strong>Giờ</strong>: @Model.SelectedFlight.DepartureTime.ToString("HH:mm") – @Model.SelectedFlight.ArrivalTime.ToString("HH:mm")</p>
                    @if (Model.AppliedPromotion != null)
                    {
                        <p class="mb-1"><strong>Giá gốc</strong>: <span class="text-decoration-line-through">@Model.OriginalPrice.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</span></p>
                        <p class="mb-0"><strong>Giá cuối</strong>: <span class="text-success fw-bold">@Model.FinalPrice.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</span></p>
                    }
                    else
                    {
                        <p class="mb-0"><strong>Giá</strong>: @Model.SelectedFlight.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</p>
                    }
                }
            </div>
        </div>
    </div>
</div>


