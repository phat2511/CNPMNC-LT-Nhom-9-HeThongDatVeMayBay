@page "{id:int}"
@model AirCloud_DA.Pages.Admin.Promotions.EditModel
@{
    ViewData["Title"] = "Sửa mã ưu đãi";
}

<div class="container-xxl py-3">
    <h2 class="mb-3">Sửa mã ưu đãi</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Input.PromotionId" />

        <div class="mb-3">
            <label class="form-label">Mã ưu đãi</label>
            <input asp-for="Input.Code" class="form-control" required />
            <span asp-validation-for="Input.Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="Input.Description" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">Giảm theo % (0-100)</label>
                <input asp-for="Input.DiscountPercent" type="number" min="0" max="100" step="0.01" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Giảm theo số tiền (VNĐ)</label>
                <input asp-for="Input.DiscountAmount" type="number" min="0" step="1000" class="form-control" />
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">Ngày bắt đầu</label>
                <input asp-for="Input.StartDate" asp-format="yyyy-MM-dd" type="date" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Ngày kết thúc</label>
                <input asp-for="Input.EndDate" asp-format="yyyy-MM-dd" type="date" class="form-control" />
            </div>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Kích hoạt</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Hủy</a>
        </div>
    </form>
</div>