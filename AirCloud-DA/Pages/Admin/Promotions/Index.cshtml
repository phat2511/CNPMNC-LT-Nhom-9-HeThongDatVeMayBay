@page
@model AirCloud_DA.Pages.Admin.Promotions.IndexModel
@{
    ViewData["Title"] = "Quản lý mã ưu đãi";
}

<div class="container-xxl py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Mã ưu đãi</h2>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Thêm</a>
    </div>

    <div class="card mb-4 --toolbar">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select asp-for="Status" class="form-select">
                        <option value="All">Tất cả</option>
                        <option value="Active">Hoạt động</option>
                        <option value="Inactive">Tắt</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input asp-for="From" asp-format="yyyy-MM-dd" type="date" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input asp-for="To" asp-format="yyyy-MM-dd" type="date" class="form-control" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary me-2">Lọc</button>
                    <a asp-page="Index" class="btn btn-secondary">Xóa lọc</a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        @{ var i = 0; }
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã</th>
                    <th>Mô tả</th>
                    <th>Giảm giá</th>
                    <th>Hiệu lực</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Items)
                {
                    var stt = ++i;
                    <tr>
                        <td>@stt</td>
                        <td><code>@p.Code</code></td>
                        <td>@p.Description</td>
                        <td>
                            @if (p.DiscountPercent.HasValue)
                            {
                                <span class="badge bg-info">@p.DiscountPercent%</span>
                            }
                            @if (p.DiscountAmount.HasValue)
                            {
                                <span class="badge bg-success">@p.DiscountAmount?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</span>
                            }
                        </td>
                        <td>
                            @((p.StartDate?.ToString("dd/MM/yyyy") ?? "-")) - @((p.EndDate?.ToString("dd/MM/yyyy") ?? "∞"))
                        </td>
                        <td>
                            <span class="badge @(p.IsActive == true ? "bg-success" : "bg-secondary")">
                                @(p.IsActive == true ? "Hoạt động" : "Tắt")
                            </span>
                        </td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="Toggle" class="d-inline">
                                <input type="hidden" name="id" value="@p.PromotionId" />
                                <input type="hidden" name="Status" value="@Model.Status" />
                                <input type="hidden" name="From" value="@Model.From?.ToString()" />
                                <input type="hidden" name="To" value="@Model.To?.ToString()" />
                                <input type="hidden" name="OldestFirst" value="@Model.OldestFirst" />
                                <button type="submit" class="btn btn-sm @(p.IsActive ? "btn-warning" : "btn-success")">
                                    @(p.IsActive ? "Tắt" : "Bật")
                                </button>
                            </form>
                            <a asp-page="Edit" asp-route-id="@p.PromotionId" class="btn btn-sm btn-primary ms-2">Sửa</a>
                            <a asp-page="Delete" asp-route-id="@p.PromotionId" class="btn btn-sm btn-danger ms-2">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>