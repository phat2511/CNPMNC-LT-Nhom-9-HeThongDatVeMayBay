@page "{id:int}"
@model AirCloud_DA.Pages.Admin.Promotions.DeleteModel
@{
    ViewData["Title"] = "Xác nhận xóa mã ưu đãi";
}

<div class="container-xxl py-3">
    <h2 class="mb-3 text-danger">Xác nhận xóa mã ưu đãi</h2>

    <div class="alert alert-warning" role="alert">
        Bạn có chắc chắn muốn xóa mã ưu đãi <strong>"@Model.Promotion.Code"</strong> không? Thao tác này không thể hoàn tác.
    </div>

    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Promotion.PromotionId</dd>

        <dt class="col-sm-3">Mã ưu đãi</dt>
        <dd class="col-sm-9"><code>@Model.Promotion.Code</code></dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.Promotion.Description</dd>

        <dt class="col-sm-3">Giảm giá (%)</dt>
        <dd class="col-sm-9">@(Model.Promotion.DiscountPercent.HasValue ? $"{Model.Promotion.DiscountPercent.Value}%" : "Không áp dụng")</dd>

        <dt class="col-sm-3">Giảm giá (VNĐ)</dt>
        <dd class="col-sm-9">@(Model.Promotion.DiscountAmount.HasValue? Model.Promotion.DiscountAmount.Value.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) : "Không áp dụng")</dd>
    </dl>

    <form method="post">
        <input type="hidden" name="id" value="@Model.Promotion.PromotionId" />
        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Hủy</a>
        </div>
    </form>
</div>