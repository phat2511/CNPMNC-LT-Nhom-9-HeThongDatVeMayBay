@page
@model AirCloud_DA.Pages.Admin.Banners.CreateModel
@{
    ViewData["Title"] = "Thêm banner";
}
<div class="container-xxl py-3">
    <h2 class="mb-3">Thêm banner</h2>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="Input.Title" class="form-control" required />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input asp-for="Input.ImageUrl" class="form-control" required />
            <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Link URL</label>
            <input asp-for="Input.LinkUrl" class="form-control" />
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Bắt đầu</label>
                <input asp-for="Input.StartDate" type="datetime-local" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Kết thúc</label>
                <input asp-for="Input.EndDate" type="datetime-local" class="form-control" />
            </div>
        </div>
        <div class="form-check mt-3">
            <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" checked />
            <label class="form-check-label">Kích hoạt</label>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Hủy</a>
        </div>
    </form>
</div>